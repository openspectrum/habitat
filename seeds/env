#!/bin/bash

# env

env_file=`pwd`/climates/.env
env_example=$env_file.example

if test -f $env_file
then
  echo "$env_file already exists; skipping."
  exit 1
fi

cp $env_example $env_file

echo "Set your environment variables"
vim $env_file

echo "Creating symlink to $env_file in $HOME"
ln -s $env_file $HOME

exit 0
