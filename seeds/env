#!/bin/bash

# env

env_file=`pwd`/climates/.env

if test -f $env_file
then
  echo "$env_file already exists; skipping."
  exit 1
fi

touch $env_file

for var in NAME EMAIL; do
  echo -n "Enter your $var: "
  read input

  echo "export $var=\"$input\"" >> $env_file
done

echo "Creating symlink to $env_file in $HOME"
ln -s $env_file $HOME

exit 0
